{
  "extends": "@tsconfig/node24/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./",
    "paths": {
      "user/*": ["./modules/user/*"],
      "shared/*": ["./modules/shared/*"]
    },
    "target": "ESNext",
    "module": "nodenext"
  },
  "include": ["**/*.ts"],
  "exclude": ["dist"]
}
